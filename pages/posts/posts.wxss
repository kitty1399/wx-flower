.contaniner{
    padding: 0 40rpx;
    margin: 20rpx 0;
}
.contaniner .person{
    display: flex;
    align-items: center;
    padding-left: 40prx;
    margin-bottom: 30rpx;
}
.contaniner .person image{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.contaniner .person text{
    font-size: 22rpx;
}
.headline{
    font-size: 32rpx;
    font-weight: 700;
}
.newImage{
    width: 100%;
    height: 400rpx;
    margin-top: 40rpx;
}
.news{
    font-size: 24rpx;
}
.icon{
    display: flex;
    align-items: center;
    margin-top: 20rpx;
    border-bottom: 1px solid #dce1e6;
    padding-bottom: 20rpx;
}
.icon :last-of-type{
    border: none;
}
.icon view{
    display: flex;
    align-items: center;
    margin-right: 30rpx;
}
